<!DOCTYPE html>
<html>
<head>
    <title>Tweets</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
<h1><%= user.name %></h1>
<p>Welcome to <%= user.password %></p>

<% if ( tweets.length === 0 ) { %>
<p>No Tweets</p>
<% } else {%>
    <% tweets.forEach((tweet) => { %>
        <p class="usertext">user : <%= tweet.user.name %> </p>
        <p>content : <%= tweet.content %> </p>
    <%})%>
<% } %>
<hr>

<form method="post" action="/tweets/create">
    <textarea type="text"  name="content" placeholder="content" cols="30" rows="4">

    </textarea>
    <br/>
    <br/>
    <input type="submit" >
</form>

</body>
</html>
